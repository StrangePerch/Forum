@model IEnumerable<Forum.Models.PostModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thread)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttachmentsPaths)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thread.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttachmentsPaths)
