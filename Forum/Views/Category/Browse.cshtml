@model IEnumerable<Forum.Models.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Browse";
    var parentId = Model.First().ParentId;

}
<!DOCTYPE html>
@if (parentId != null)
{
    <a class="badge badge-primary"
       asp-area="" asp-controller="Category" asp-action="Browse" asp-route-id="@parentId">
        Return
    </a>
}

<div class="d-flex flex-column mt-4">
    <div class="container">
        <div class="row">
            <div class="col border">
                <div class="nav-link text-dark">
                    <h4 class="">Name</h4>
                </div>
            </div>
            <div class="col border">
                <div class="nav-link text-dark">
                    <h4 class="">Description</h4>
                </div>
            </div>
            <div class="col border">
                <div class="nav-link text-dark">
                    <h4 class="">LastActive</h4>
                </div>
            </div>
            <div class="col border">
                <div class="nav-link text-dark">
                    <h4 class="">Threads</h4>
                </div>
            </div>
            <div class="col border">
                <div class="nav-link text-dark">
                    <h4 class="">Posts</h4>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="container">
                <div class="row">
                    <div class="col border">
                        <a class="nav-link text-dark"
                           asp-area="" asp-controller="Category" asp-action="Browse" asp-route-id="@item.Id">
                            @item.Name
                        </a>
                    </div>
                    <div class="col border">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Browse" asp-route-id="@item.Id">
                            @item.Description
                        </a>
                    </div>
                    <div class="col border">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Browse" asp-route-id="@item.LastActiveId">
                            @item.LastActive
                        </a>
                    </div>
                    <div class="col border">
                        <div class="nav-link text-dark">
                            @item.ThreadsCount
                        </div>
                    </div>
                    <div class="col border">
                        <div class="nav-link text-dark">
                            @item.PostsCount
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h1>Wow, such empty</h1>
    }
    @* <a class="badge badge-info mt-4" *@
    @*    asp-area="" asp-controller="Category" asp-action="Create" asp-route-id="@parentId"> *@
    @*     Create *@
    @* </a> *@
</div>