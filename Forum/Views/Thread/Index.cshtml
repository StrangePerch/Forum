@model IEnumerable<Forum.Models.ViewModels.ThreadViewModel>

@{
    Layout = "Admin/_AdminLayout";
}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">AuthorId</th>
        <th scope="col">AuthorName</th>
        <th scope="col">ParentName</th>
        <th scope="col">PostsCount</th>
        <th scope="col">Created</th>
        <th scope="col">LastActive</th>
        <th scope="col">Closed</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var thread in Model)
    {
        <tr>
            <th scope="row">@thread.Name</th>
            <td>@thread.AuthorId</td>
            <td>@thread.AuthorName</td>
            <td>@thread.ParentName</td>
            <td>@thread.PostsCount</td>
            <td>@thread.Created</td>
            <td>@thread.LastActive</td>
            <td>@thread.Closed</td>
            <td>
                <a class="badge bg-warning" asp-action="Edit" asp-route-id="@thread.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
    document.querySelector("#ThreadsLink").className += " active";
    document.querySelector("#Databases").className += " menu-open";
    </script>
}