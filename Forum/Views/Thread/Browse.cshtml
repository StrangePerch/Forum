@model IEnumerable<Forum.Models.ThreadModel>

@{
    ViewData["Title"] = "Browse";
    var parentId = Model.First().ParentId;
}
<!DOCTYPE html>

<a class="badge badge-primary"
   asp-area="" asp-controller="Category" asp-action="Browse" asp-route-id="@parentId">
    Return to Categories
</a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Last post
            </th>
            <th>
                Threads
            </th>
            <th>
                Posts
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="nav-link text-dark"
                   asp-area="" asp-controller="Category" asp-action="Browse" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
            </td>
        </tr>
    }
    </tbody>
</table>